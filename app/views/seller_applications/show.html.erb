<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Seller Application</h1>
    <% if @seller_application.pending? %>
      <%= link_to edit_seller_application_path, class: "btn btn-outline-primary" do %>
        <i class="fas fa-edit me-2"></i>Edit Application
      <% end %>
    <% end %>
  </div>

  <div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Application Details</h5>
      <span class="badge <%= @seller_application.status == 'pending' ? 'bg-warning' : (@seller_application.status == 'approved' ? 'bg-success' : 'bg-danger') %>">
        <%= @seller_application.status.capitalize %>
      </span>
    </div>

    <% if @seller_application.pending? %>
      <div class="card-body">
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          Your application is currently under review. You can edit it while it's pending.
        </div>
        
        <p><strong>Submitted on:</strong> <%= @seller_application.created_at.strftime("%B %d, %Y") %></p>
        
        <h6 class="mt-4">Your reason for applying:</h6>
        <div class="p-3 bg-light">
          <%= simple_format(@seller_application.reason) %>
        </div>
        
        <% if @seller_application.reviewed_at.present? %>
          <hr>
          <h6>Review Information:</h6>
          <p><strong>Reviewed on:</strong> <%= @seller_application.reviewed_at.strftime("%B %d, %Y") %></p>
          
          <% if @seller_application.status == "rejected" && @seller_application.rejection_reason.present? %>
            <h6 class="mt-3">Rejection Reason:</h6>
            <div class="p-3 bg-light text-danger">
              <%= simple_format(@seller_application.rejection_reason) %>
            </div>
            
            <div class="mt-4">
              <% if current_user.can_apply_for_seller? %>
                <%= link_to "Apply Again", new_seller_application_path, class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="card-body">
        <p><strong>Submitted on:</strong> <%= @seller_application.created_at.strftime("%B %d, %Y") %></p>
        
        <h6 class="mt-4">Your reason for applying:</h6>
        <div class="p-3 bg-light">
          <%= simple_format(@seller_application.reason) %>
        </div>
        
        <% if @seller_application.reviewed_at.present? %>
          <hr>
          <h6>Review Information:</h6>
          <p><strong>Reviewed on:</strong> <%= @seller_application.reviewed_at.strftime("%B %d, %Y") %></p>
          
          <% if @seller_application.status == "rejected" && @seller_application.rejection_reason.present? %>
            <h6 class="mt-3">Rejection Reason:</h6>
            <div class="p-3 b dg-light text-danger">
              <%= simple_format(@seller_application.rejection_reason) %>
            </div>
            
            <div class="mt-4">
              <% if current_user.can_apply_for_seller? %>
                <%= link_to "Apply Again", new_seller_application_path, class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Profile", user_profile_path, class: "btn btn-secondary" %>
  </div>
</div>
