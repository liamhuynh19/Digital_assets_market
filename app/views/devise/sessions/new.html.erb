<div class="devise-container">
<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold">Welcome Back!</h2>
            <p class="text-muted">Please sign in to continue</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
              <%= f.label :email, class: "form-label" %>
            </div>

            <div class="form-floating mb-4">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
              <%= f.label :password, class: "form-label" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label text-muted" %>
                </div>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-primary text-decoration-none" %>
              </div>
            <% end %>

            <%= f.submit "Sign in", class: "btn btn-primary w-100 py-2 mb-4 rounded-3" %>
            
            <div class="text-center">
              <p class="text-muted">Don't have an account? 
                <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary text-decoration-none" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
