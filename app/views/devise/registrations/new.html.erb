<div class="devise-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <div class="text-center mb-4">
              <h2 class="fw-bold">Create Account</h2>
              <p class="text-muted">Join our community today</p>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <% if resource.errors.any? %>
                <div class="alert alert-danger mb-3">
                  <h4 class="h6">Please correct the following:</h4>
                  <ul class="mb-0">
                    <% resource.errors.full_messages.uniq.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-floating mb-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}", 
                    placeholder: "name@example.com" %>
                <%= f.label :email %>
                <% if resource.errors[:email].any? %>
                  <div class="invalid-feedback"><%= resource.errors[:email].join(", ") %></div>
                <% end %>
              </div>

              <div class="form-floating mb-3">
                <%= f.text_field :name, autocomplete: "name", 
                    class: "form-control #{resource.errors[:name].any? ? 'is-invalid' : ''}", 
                    placeholder: "Your Name" %>
                <%= f.label :name %>
                <% if resource.errors[:name].any? %>
                  <div class="invalid-feedback"><%= resource.errors[:name].join(", ") %></div>
                <% end %>
              </div>

              <div class="form-floating mb-3">
                <%= f.password_field :password, autocomplete: "new-password", 
                    class: "form-control #{resource.errors[:password].any? ? 'is-invalid' : ''}", 
                    placeholder: "Password" %>
                <%= f.label :password %>
                <% if resource.errors[:password].any? %>
                  <div class="invalid-feedback"><%= resource.errors[:password].join(", ") %></div>
                <% end %>
              </div>

              <div class="form-floating mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                    class: "form-control #{resource.errors[:password_confirmation].any? ? 'is-invalid' : ''}", 
                    placeholder: "Confirm Password" %>
                <%= f.label :password_confirmation %>
                <% if resource.errors[:password_confirmation].any? %>
                  <div class="invalid-feedback"><%= resource.errors[:password_confirmation].join(", ") %></div>
                <% end %>
              </div>

              <div class="d-grid mb-3">
                <%= f.submit "Sign up", class: "btn btn-primary py-2" %>
              </div>
            <% end %>

            <div class="text-center">
              <p class="text-muted">
                Already have an account? 
                <%= link_to "Sign in", new_session_path(resource_name), class: "text-primary text-decoration-none" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>