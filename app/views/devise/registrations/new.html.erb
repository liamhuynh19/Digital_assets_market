<h2 class="mb-4 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card p-4 shadow-sm", style: "max-width: 400px; margin: auto;" }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger mb-3">
      <h4>Please correct the following:</h4>
      <ul>
        <% resource.errors.full_messages.uniq.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}" %>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback"><%= resource.errors[:email].join(", ") %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control #{resource.errors[:name].any? ? 'is-invalid' : ''}" %>
    <% if resource.errors[:name].any? %>
      <div class="invalid-feedback"><%= resource.errors[:name].join(", ") %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{resource.errors[:password].any? ? 'is-invalid' : ''}" %>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback"><%= resource.errors[:password].join(", ") %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{resource.errors[:password_confirmation].any? ? 'is-invalid' : ''}" %>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="invalid-feedback"><%= resource.errors[:password_confirmation].join(", ") %></div>
    <% end %>
  </div>

  <div class="d-grid">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>