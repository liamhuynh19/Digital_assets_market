<h2 class="mb-4"><i class="fas fa-box"></i> My Orders</h2>

<% if @orders.any? %>
  <table class="table table-hover shadow-sm rounded">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Product</th>
        <th>Total Price</th>
        <th>Ordered At</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each_with_index do |order, idx| %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= order.product&.name %></td>
          <td>$<%= number_with_precision(order.total_price, precision: 2) %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "View", order_path(order), class: "btn btn-sm btn-outline-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info mt-4">
    <i class="fas fa-info-circle"></i> You have no orders yet.
  </div>
<% end %>