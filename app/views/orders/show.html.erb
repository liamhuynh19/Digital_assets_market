<div class="container my-4">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0">Order #<%= @order.id %></h2>
    </div>
    
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <h5 class="mb-3">Order Details</h5>
          <p><strong>Date:</strong> <%= @order.created_at.strftime("%B %d, %Y") %></p>
          <p><strong>Status:</strong> <span class="badge bg-<%= @order.status == 'completed' ? 'success' : 'warning' %>"><%= @order.status %></span></p>
          <p><strong>Total Amount:</strong> <%= number_to_currency(@order.total_amount) %></p>
        </div>
        
        <div class="col-md-6">
          <h5 class="mb-3">Customer Information</h5>
          <p><strong>Name:</strong> <%= @order.user.name %></p>
          <p><strong>Email:</strong> <%= @order.user.email %></p>
        </div>
      </div>

      <h5 class="mb-3">Order Items</h5>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product</th>
              <th>Price</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_items.each do |item| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <%= image_tag item.product.file_url, class: "me-2", style: "width: 50px; height: 50px; object-fit: cover;" if item.product.file_url.present? %>
                    <div>
                      <h6 class="mb-0"><%= item.product.name %></h6>
                      <small class="text-muted"><%= truncate(item.product.description, length: 50) %></small>
                    </div>
                  </div>
                </td>
                <td><%= number_to_currency(item.price_at_purchase) %></td>
                <td><%= number_to_currency(item.price_at_purchase) %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3" class="text-end"><strong>Total:</strong></td>
              <td><strong><%= number_to_currency(@order.total_amount) %></strong></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to orders_path, class: "btn btn-outline-secondary" do %>
          <i class="fa fa-arrow-left me-2"></i>Back to Orders
        <% end %>
      </div>
    </div>
  </div>
</div>
