<nav class="navbar navbar-expand-lg navbar-custom shadow-sm bg-white fixed-top">
      <div class="container">
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <i class="fas fa-store-alt me-2"></i>
          Digital Assets Market
        <% end %>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto align-items-center">
           
            
            <li class="nav-item">
              <%= search_form_for(@q || Product.ransack, 
                  url: products_path, 
                  class: "d-flex position-relative") do |f| %>
                <% if params.dig(:q, :s).present? %>
                  <%= f.hidden_field :s, value: params.dig(:q, :s) %>
                <% end %>
                <% if params.dig(:q, :category_id_eq).present? %>
                  <%= f.hidden_field :category_id_eq, value: params.dig(:q, :category_id_eq) %>
                <% end %>
                <%= f.search_field :name_cont, 
                    placeholder: "Search for assets...",
                    class: "form-control search-bar pe-5",
                    value: params[:q].is_a?(Hash) ? params[:q][:name_cont] : nil
                %>
                <button class="btn position-absolute end-0 top-50 translate-middle-y me-2" type="submit">
                  <i class="fas fa-search text-muted"></i>
                </button>
              <% end %>
            </li>
          </ul>

          <ul class="navbar-nav ms-auto align-items-center">
            <li class="nav-item dropdown me-3 position-relative">
              <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="cart-icon position-relative">
                  <i class="fas fa-shopping-cart fa-lg"></i>
                  <% if @cart_items&.any? %>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger shadow-sm" style="font-size:0.75rem; min-width:1.5em;">
                      <%= @cart_items.count %>
                    </span>
                  <% end %>
                </div>
              </a>
              <div class="dropdown-menu dropdown-menu-end cart-dropdown p-3 shadow rounded-4" style="min-width: 320px;">
                <% if @cart_items&.any? %>
                  <% total_price = 0 %>
                  <% @cart_items.each do |item| %>
                    <% total_price += item.product.price %>
                    <div class="cart-item d-flex align-items-center mb-2 pb-2 border-bottom">
                      <%= image_tag item.product.thumbnail.presence || asset_path("place_holder.jpg"),
                          class: "cart-item-image rounded me-2", width: 40, height: 40 %>
                      <div class="flex-grow-1">
                        <div class="fw-bold"><%= item.product.name %></div>
                        <div class="text-muted small">
                          $<%= number_with_precision(item.product.price, precision: 2) %>
                        </div>
                      </div>
                      <%= button_to cart_remove_from_cart_path(@cart, item),
                          method: :delete,
                          class: "btn btn-link text-danger p-0 ms-2",
                          form: { style: "display: inline;" } do %>
                        <i class="fas fa-times"></i>
                      <% end %>
                    </div>
                  <% end %>
                  <div class="d-flex justify-content-between align-items-center mt-3 border-top pt-2">
                    <span class="fw-bold">Total:</span>
                    <span class="fw-bold text-primary">$<%= number_with_precision(total_price, precision: 2) %></span>
                  </div>
                  <div class="cart-actions d-grid gap-2 mt-3">
                    <%= link_to "View Cart", cart_path, class: "btn btn-primary btn-sm" %>
                  </div>
                <% else %>
                  <div class="text-center py-4">
                    <i class="fas fa-shopping-cart fa-2x mb-3 text-muted"></i>
                    <p class="mb-0">Your cart is empty</p>
                  </div>
                <% end %>
              </div>
            </li>
            
            <li class="nav-item dropdown">
              <%= render 'layouts/shared/user_menu' %>
            </li>
            <% if current_user && current_user.roles.count > 1 %>
              <li class="nav-item dropdown ms-2">
                <button class="btn btn-outline-primary btn-sm dropdown-toggle d-flex align-items-center" 
                        type="button" 
                        id="roleDropdown" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false">
                  <i class="fas fa-exchange-alt me-1"></i>
                  <span><%= current_user.current_view.capitalize %></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="roleDropdown">
                  <li><h6 class="dropdown-header">Switch Role</h6></li>
                  <% current_user.roles.each do |role| %>
                    <li>
                      <%= link_to switch_role_path(role: role.name), 
                                class: "dropdown-item d-flex align-items-center #{role.id == current_user.current_role_id ? 'active bg-dark' : ''}", 
                                data: { turbo_method: :post } do %>
                        <% role_icon = case role.name
                                      when "admin" then "fa-user-shield"
                                      when "seller" then "fa-store"
                                      when "buyer" then "fa-shopping-bag"
                                      else "fa-user"
                                      end %>
                        <i class="fas <%= role_icon %> me-2 <%= role.id == current_user.current_role_id ? 'text-primary' : 'text-muted' %>"></i>
                        <span><%= role.name.capitalize %> View</span>
                        <% if role.id == current_user.current_role_id %>
                          <i class="fas fa-check ms-auto text-primary"></i>
                        <% end %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


