          <% end %>
        </li>
        <li>
          <%= link_to reviews_path, class: "nav-link #{current_page?(reviews_path) ? 'active' : ''}" do %>
            <i class="fas fa-star"></i> Reviews
          <% end %>
        </li>
      </ul>

      <div class="user-menu">
        <%= render 'layouts/shared/user_menu' %>
      </div>
