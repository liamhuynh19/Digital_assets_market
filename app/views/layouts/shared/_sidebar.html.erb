<div class="admin-sidebar p-3 d-flex flex-column">
      <div class="admin-brand">
        <%= link_to admin_products_path, class: "d-flex align-items-center" do %> 
          <i class="fas fa-chart-line me-2"></i>
            <% if current_user.admin? %>
              Admin Dashboard
            <% else %>
              Seller Dashboard
            <% end %>
        <% end %>
      </div>

      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <%= link_to admin_products_path, class: "nav-link #{current_page?(admin_products_path) ? 'active' : ''}" do %>
            <i class="fas fa-cube"></i> Products
          <% end %>
        </li>
        <li>
          <%= link_to admin_categories_path, class: "nav-link #{current_page?(admin_categories_path) ? 'active' : ''}" do %>
            <i class="fas fa-tags"></i> Categories
          <% end %>
        </li>
        <% if policy(:admin).index? %>
        <li>
          <%= link_to admin_users_path, class: "nav-link #{current_page?(admin_users_path) ? 'active' : ''}" do %>
            <i class="fas fa-users"></i> Users
          <% end %>
        </li>
        
        <li>
          <%= link_to admin_seller_applications_path, class: "nav-link #{controller_name == 'seller_applications' ? 'active' : ''}" do %>
            <i class="fas fa-user-plus"></i> Seller Applications
            <% if pending_seller_applications_count > 0 %>
              <span class="badge bg-danger rounded-pill ms-1"><%= pending_seller_applications_count %></span>
            <% end %>
          <% end %>
        </li>
        <% end %>

        <li>
          <%= link_to admin_reviews_path, class: "nav-link #{current_page?(admin_reviews_path) ? 'active' : ''}" do %>
            <i class="fas fa-star"></i> Reviews
          <% end %>
        </li>

        <li>
          <%= link_to admin_report_path, class: "nav-link #{current_page?(admin_report_path) ? 'active' : ''}" do %>
            <i class="fas fa-chart-line"></i> Report
          <% end %>
        </li>
        
        <li class="nav-item">
          <%= link_to admin_orders_path, class: "nav-link #{current_page?(admin_orders_path) ? 'active' : ''}" do %>
            <i class="fas fa-shopping-cart"></i> Orders
          <% end %>
        </li>
      </ul>
     

    
      
      <div class="user-menu mt-auto">
        <% if current_user && current_user.roles.count > 1 %>
      <div class="dropdown ms-2">
        <button class="btn btn-outline-light dropdown-toggle" type="button" id="roleDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <%= current_user.current_view.capitalize %> View
        </button>
        <ul class="dropdown-menu" aria-labelledby="roleDropdown">
          <% current_user.roles.each do |role| %>
            <li>
              <%= link_to "#{role.name.capitalize} View", 
                         switch_role_path(role: role.name), 
                         class: "dropdown-item #{role.id == current_user.current_role_id ? 'active' : ''}", 
                         data: { turbo_method: :post } %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
        <div class="nav-item dropdown">
          <%= render 'layouts/shared/user_menu' %>
        </div>
      </div>
    </div>