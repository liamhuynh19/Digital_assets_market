<h2 class="mb-4"><i class="fas fa-shopping-cart"></i> My Cart</h2>

<% if @cart_items.any? %>
  <table class="table table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
      <tr>
        <th>Product</th>
        <th>Description</th>
        <th class="text-end">Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% total_price = 0 %>
      <% @cart_items.each do |item| %>
        <% total_price += item.product.price %>
        <tr>
          <td class="d-flex align-items-center gap-2">
            <%= image_tag(item.product.file_url.presence || asset_path("place_holder.jpg"), width: 60, height: 60, class: "rounded shadow-sm") %>
            <span class="fw-bold"><%= item.product.name %></span>
          </td>
          <td class="text-muted"><%= truncate(item.product.description, length: 60) %></td>
          <td class="text-end text-success fw-semibold">
            $<%= number_with_precision(item.product.price, precision: 2) %>
          </td>
          <td>
            <%= button_to "Remove", cart_remove_from_cart_path(@cart, item), method: :delete, class: "btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2" class="text-end fw-bold">Total:</td>
        <td class="text-end fw-bold text-primary">
          $<%= number_with_precision(total_price, precision: 2) %>
        </td>
        <td></td>
      </tr>
    </tfoot>
  </table>
<% else %>
  <div class="alert alert-info mt-4">
    <i class="fas fa-info-circle"></i> Your cart is empty.
  </div>
<% end %>