<% if current_user.buyer? %>
  <div class="col-md-6">
    <div class="metric-card p-3 h-100">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <div class="metric-label">Seller Status</div>
          <% application = current_user.latest_seller_application %>
          
          <% if application %>
            <div class="d-flex flex-column mt-2">
              <div class="d-flex align-items-center gap-2 mb-2">
                <span class="badge <%= application.status == 'pending' ? 'bg-warning text-dark' : (application.status == 'approved' ? 'bg-success' : 'bg-danger') %>">
                  <%= application.status.capitalize %>
                </span>
                <small>
                  <%= application.created_at.strftime("Submitted on %b %d, %Y") %>
                </small>
              </div>
              
              <div>
                <%= link_to "View Application Details", users_seller_application_path, 
                    class: "btn btn-sm #{application.status == 'rejected' ? 'btn-outline-danger' : 'btn-outline-primary'}" %>
                
                <% if application.status == 'rejected' && current_user.can_apply_for_seller? %>
                  <%= link_to "Apply Again", new_users_seller_application_path, class: "btn btn-sm btn-primary ms-2" %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="mt-2">
              <%= link_to "Apply to Become a Seller", new_users_seller_application_path, class: "btn btn-sm btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="metric-icon icon-blue">
          <i class="fas fa-store"></i>
        </div>
      </div>
    </div>
  </div>
<% end %>
