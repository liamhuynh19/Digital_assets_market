<% content_for :title, "Users" %>

<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success text-center"><%= notice %></div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Users</h1>
    <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name.presence || "â€”" %></td>
            <td><%= user.email %></td>
            <td><%= user.roles %></td>
            <td><%= user.status %></td>
            <td class="text-center">
              <%= link_to "Show", user, class: "btn btn-outline-primary btn-sm me-1" %>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-secondary btn-sm me-1" %>
              <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
