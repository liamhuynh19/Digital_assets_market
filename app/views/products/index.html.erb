<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <% if policy.show(product).show?%>
      <%= link_to "Show this product", product %>
      <% end %>
    </p>
  <% end %>
</div>

<% if policy(Product).new?%>
<%= link_to "New product", new_product_path %>
<% end %>