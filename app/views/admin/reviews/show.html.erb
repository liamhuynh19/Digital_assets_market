<% content_for :title, "Review Detail" %>

<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="gradient-text mb-1">Review Detail</h1>
      <p class="text-muted mb-0">
        Created <%= time_ago_in_words(@review.created_at) %> ago
        • <%= l(@review.created_at, format: :long) %>
      </p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to "Back to Reviews", admin_reviews_path(product_id: @review.product_id), class: "btn btn-light" %>
      <% if policy([:admin, @review]).edit? %>
        <%= link_to "Edit", edit_admin_review_path(@review), class: "btn btn-primary" %>
      <% end %>
      <% if policy([:admin, @review]).destroy? %>
        <%= link_to "Delete", admin_review_path(@review),
            data: { turbo_method: :delete, turbo_confirm: "Delete this review?" },
            class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>

  <div class="card glass-card">
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-4">
          <h6 class="text-muted mb-1">User</h6>
          <div class="fw-semibold"><%= @review.user&.email %></div>
        </div>

        <div class="col-md-4">
          <h6 class="text-muted mb-1">Product</h6>
          <div class="fw-semibold">
            <%= link_to @review.product&.name, admin_product_path(@review.product) %>
          </div>
        </div>

        <div class="col-md-4">
          <h6 class="text-muted mb-1">Rating</h6>
          <div class="text-warning fs-5">
            <%= "★" * @review.rating.to_i %><%= "☆" * (5 - @review.rating.to_i) %>
            <span class="text-muted ms-2">(<%= @review.rating %>/5)</span>
          </div>
        </div>

        <div class="col-12">
          <h6 class="text-muted mb-1">Comment</h6>
          <div class="border rounded p-3 bg-light">
            <%= simple_format(h(@review.comment.to_s)) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>