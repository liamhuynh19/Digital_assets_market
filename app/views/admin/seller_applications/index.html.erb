<% content_for :title, "Seller Applications" %>

<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Seller Applications</h1>
  </div>

  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6">
          <h5 class="mb-0">All Applications</h5>
        </div>
        <div class="col-md-6 text-end">
          <div class="btn-group">
            <%= link_to "All", admin_seller_applications_path, class: "btn btn-sm #{params[:status].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
            <%= link_to "Pending", admin_seller_applications_path(status: 'pending'), class: "btn btn-sm #{params[:status] == 'pending' ? 'btn-primary' : 'btn-outline-primary'}" %>
            <%= link_to "Approved", admin_seller_applications_path(status: 'approved'), class: "btn btn-sm #{params[:status] == 'approved' ? 'btn-primary' : 'btn-outline-primary'}" %>
            <%= link_to "Rejected", admin_seller_applications_path(status: 'rejected'), class: "btn btn-sm #{params[:status] == 'rejected' ? 'btn-primary' : 'btn-outline-primary'}" %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Email</th>
              <th>Status</th>
              <th>Submitted</th>
              <th>Reviewed</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @applications.any? %>
              <% @applications.each do |application| %>
                <tr>
                  <td><%= application.id %></td>
                  <td>
                    <%= link_to admin_user_path(application.user) do %>
                      <%= application.user.name.presence || "User ##{application.user_id}" %>
                    <% end %>
                  </td>
                  <td><%= application.user.email %></td>
                  <td>
                    <% case application.status %>
                    <% when 'pending' %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% when 'approved' %>
                      <span class="badge bg-success">Approved</span>
                    <% when 'rejected' %>
                      <span class="badge bg-danger">Rejected</span>
                    <% end %>
                  </td>
                  <td><%= application.created_at.strftime("%b %d, %Y") %></td>
                  <td><%= application.reviewed_at ? application.reviewed_at.strftime("%b %d, %Y") : "N/A" %></td>
                  <td>
                    <%= link_to admin_seller_application_path(application), class: "btn btn-sm btn-info" do %>
                      <i class="fas fa-eye"></i> View
                    <% end %>
                    
                    <% if application.status == 'pending' %>
                      <%= link_to approve_admin_seller_application_path(application), 
                                  data: { 
                                    turbo_method: :patch, 
                                    turbo_confirm: "Are you sure you want to approve this seller application?" 
                                  }, 
                                  class: "btn btn-sm btn-success" do %>
                        <i class="fas fa-check"></i> Approve
                      <% end %>
                      
                      <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal<%= application.id %>">
                        <i class="fas fa-times"></i> Reject
                      </button>
                      
                      <!-- Reject Modal -->
                      <div class="modal fade" id="rejectModal<%= application.id %>" tabindex="-1" aria-labelledby="rejectModalLabel<%= application.id %>" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <%= form_with(model: application, url: reject_admin_seller_application_path(application), method: :patch) do |f| %>
                              <div class="modal-header">
                                <h5 class="modal-title" id="rejectModalLabel<%= application.id %>">Reject Application</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <div class="mb-3">
                                  <%= f.label :rejection_reason, "Reason for rejection", class: "form-label" %>
                                  <%= f.text_area :rejection_reason, class: "form-control", rows: 3, required: true %>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <%= f.submit "Reject Application", class: "btn btn-danger" %>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="7" class="text-center">No seller applications found</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
