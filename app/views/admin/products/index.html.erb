<% content_for :title, "Products Management" %>

<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="gradient-text mb-0">Products Management</h1>
      <p class="text-muted">Manage your digital assets inventory</p>
    </div>
    
    <%= link_to new_admin_product_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> New Product
    <% end %>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <%= search_form_for @q, url: admin_products_path, class: "d-flex flex-wrap gap-2" do |f| %>
        <div class="input-group">
          <%= f.search_field :name_cont, 
              placeholder: "Search products...", 
              class: "form-control" %>
          <button class="btn btn-outline-secondary" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
        
        <%= f.select :category_id_eq,
            options_from_collection_for_select(Category.all, :id, :name, f.object.category_id_eq),
            { include_blank: 'All Categories' },
            { 
              class: "form-select",
              onchange: 'this.form.submit()'
            } 
        %>
        
        <%= f.select :status_eq,
            options_for_select(
              [
                ['All Statuses', ''],
                ['Draft', 'draft'],
                ['Processing', 'processing'],
                ['Uploaded', 'uploaded'],
                ['Published', 'published']
              ], 
              f.object.status_eq
            ),
            {},
            { 
              class: "form-select",
              onchange: 'this.form.submit()'
            } 
        %>
        
        <%= f.select :s,
            options_for_select([
              ['Latest', 'created_at desc'],
              ['Oldest', 'created_at asc'],
              ['Name: A to Z', 'name asc'],
              ['Name: Z to A', 'name desc'],
              ['Price: Low to High', 'price asc'],
              ['Price: High to Low', 'price desc'], 
              ['Rating: Low to High', 'average_rating asc'],
              ['Rating: High to Low', 'average_rating desc']
            ], params.dig(:q, :s) || f.object.s || 'created_at desc'),
            {},
            { 
              class: "form-select",
              onchange: 'this.form.submit()'
            } 
        %>
      <% end %>
    </div>
    
    <div class="col-md-4 text-end">
      <% if current_user.admin? || current_user.seller? %>
        <%= form_with url: bulk_import_admin_products_path, local: true, html: { multipart: true, class: "d-inline-flex align-items-center gap-2" } do |f| %>
          <%= f.file_field :csv, accept: ".csv", class: "form-control" %>
          <%= f.submit "Bulk Import", class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="card glass-card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col" style="width: 80px">Image</th>
              <th scope="col">Name</th>
              <th scope="col">Category</th>
              <th scope="col">Price</th>
              <th scope="col">Rating</th>
              <th scope="col">Status</th>
              <th scope="col">Created</th>
              <th scope="col" style="width: 150px">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td>
                  <%= image_tag product.thumbnail.presence || asset_path("place_holder.jpg"), 
                      class: "img-thumbnail", style: "width: 50px; height: 50px; object-fit: cover;" %>
                </td>
                <td>
                  <div class="fw-semibold"><%= product.name %></div>
                  <small class="text-muted"><%= truncate(product.description, length: 50) %></small>
                </td>
                <td>
                  <span class="badge rounded-pill bg-light text-dark">
                    <i class="fas fa-tag me-1"></i>
                    <%= product.category&.name || "Uncategorized" %>
                  </span>
                </td>
                <td>
                  <div class="fw-semibold">$<%= number_with_precision(product.price, precision: 2) %></div>
                </td>
                <td>
                  <% if product.reviews.any? %>
                    <div class="d-flex align-items-center">
                      <div class="rating-stars me-2">
                        <% avg_rating = product.reviews.average(:rating).to_f %>
                        <% 5.times do |i| %>
                          <% if i < avg_rating.floor %>
                            <i class="fas fa-star text-warning"></i>
                          <% elsif i < avg_rating && (avg_rating % 1) > 0 %>
                            <i class="fas fa-star-half-alt text-warning"></i>
                          <% else %>
                            <i class="far fa-star text-muted"></i>
                          <% end %>
                        <% end %>
                      </div>
                      <span class="badge bg-light text-dark">
                        <%= number_with_precision(avg_rating, precision: 1) %> (<%= product.reviews.length %>)
                      </span>
                    </div>
                  <% else %>
                    <span class="badge bg-light text-muted">No ratings</span>
                  <% end %>
                </td>
                <td>
                  <span class="badge rounded-pill 
                    <%=  case product.status
                    when "published" then "bg-success"
                    when "processing" then "bg-warning text-dark"
                    when "draft" then "bg-secondary"
                    else "bg-light text-dark"
                    end %>">
                    <%= product.status.capitalize %>
                  </span>
                </td>
                <td>
                  <div><%= product.created_at.strftime("%B %d, %Y") %></div>
                  <small class="text-muted"><%= time_ago_in_words(product.created_at) %> ago</small>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <%= link_to edit_admin_product_path(product), 
                        class: "btn btn-sm btn-light",
                        title: "Edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_product_path(product),
                        class: "btn btn-sm btn-light",
                        title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= button_to admin_product_path(product),
                        method: :delete,
                        class: "btn btn-sm btn-danger",
                        form: { class: 'd-inline' },
                        data: { turbo_confirm: "Are you sure you want to delete this product?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                    <% if policy([:admin, product]).publish? && product.status == "uploaded" %>
                      <%= button_to publish_admin_product_path(product),
                          method: :post,
                          class: "btn btn-sm btn-success",
                          form: { class: 'd-inline' },
                          data: { turbo_confirm: "Publish this product?" } do %>
                        <i class="fas fa-upload"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= render "shared/pagination_toolbar",
           collection: @products,
           per_page_options: [5, 10, 20, 50, 100],
           label: "products" %>
</div>

<% content_for :styles do %>
  <style>
    .glass-card {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .gradient-text {
      background: linear-gradient(45deg, #2686a3, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      font-weight: 700;
    }

    .table th {
      font-weight: 600;
      border-bottom-width: 1px;
    }

    .table td {
      padding: 1rem;
      vertical-align: middle;
    }

    .btn-light {
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .btn-light:hover {
      background: rgba(255, 255, 255, 1);
      transform: translateY(-1px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
  </style>
<% end %>
