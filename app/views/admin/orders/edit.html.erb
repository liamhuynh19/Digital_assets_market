<% content_for :title, "Edit Order ##{@order.id}" %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="position-relative mb-4">
        <h1 class="gradient-text mb-0">Edit Order #<%= @order.id %></h1>
        <div class="position-absolute top-0 end-0">
          <%= link_to "Show Order", admin_order_path(@order), class: "btn btn-outline-primary me-2" %>
          <%= link_to "Back to Orders", admin_orders_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
      
      <%= render "form", order: @order %>
    </div>
  </div>
</div>