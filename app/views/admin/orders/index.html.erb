<% content_for :title, "Orders Management" %>

<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="gradient-text mb-0">Orders Management</h1>
      <p class="text-muted">Manage customer orders</p>
    </div>
    <% if current_user.admin? %>
    <%= link_to new_admin_order_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> New Order
    <% end %>
    <% end %>
  </div>

  <div class="card glass-card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">Order ID</th>
              <th scope="col">Customer</th>
              <th scope="col">Total</th>
              <th scope="col">Status</th>
              <th scope="col">Items</th>
              <th scope="col">Created</th>
              <th scope="col" style="width: 150px">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>#<%= order.id %></td>
                <td>
                  <div class="fw-semibold"><%= order.user.name %></div>
                  <small class="text-muted"><%= order.user.email %></small>
                </td>
                <td>
                  <div class="fw-semibold">$<%= number_with_precision(order.total_amount, precision: 2) %></div>
                </td>
                <td>
                  <span class="badge rounded-pill 
                    <%= case order.status
                        when "completed" then "bg-success"
                        when "processing" then "bg-warning text-dark"
                        when "cancelled" then "bg-danger"
                        else "bg-secondary"
                        end %>">
                    <%= order.status.capitalize %>
                  </span>
                </td>
                <td><%= order.order_items.count %> items</td>
                <td>
                  <div><%= order.created_at.strftime("%B %d, %Y") %></div>
                  <small class="text-muted"><%= time_ago_in_words(order.created_at) %> ago</small>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <%= link_to admin_order_path(order),
                        class: "btn btn-sm btn-light",
                        title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>

                    <% if current_user.admin? %>
                      <%= link_to edit_admin_order_path(order),
                          class: "btn btn-sm btn-primary",
                          title: "Edit" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>

                      <%= button_to admin_order_path(order),
                          method: :delete,
                          class: "btn btn-sm btn-danger",
                          form: { class: 'd-inline' },
                          data: { turbo_confirm: "Are you sure you want to delete this order?" },
                          title: "Delete" do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>